#include "light.li"

Texture2D resource;
SamplerState ss;

cbuffer PSCBuffer
{
    float _padding;
    float _padding1;
    float _padding2;
    float _padding3;
};

struct PSInput
{
	float4 position:      SV_POSITION;
	float4 normal:        NORMAL;
	float3 viewDirection: TEXCOORD0;
	float2 texcoord:      TEXCOORD1;
};

float4 main(PSInput input) : SV_TARGET
{
    float4 result = calcPhongLighting(resource,
									  ss,
									  input.normal,  
									  input.texcoord,
									  input.viewDirection,
									  float4(0.3f, 0.3f, 0.3f, 1.0f),
									  float4(1.0f, 1.0f, 1.0f, 1.0f),
									  float3(0.0f, 0.0f, 1.0f),
									  512);
	return result;
}